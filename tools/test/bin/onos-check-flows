#!/bin/bash
# -----------------------------------------------------------------------------
# Checks ONOS summary data
# -----------------------------------------------------------------------------

aux=/tmp/stc-$$.log
trap "rm -f $aux 2>/dev/null" EXIT

onos ${1:-$OCI} "onos:flows" > $aux
cat $aux

for i in {1..5}; do
    let status=0
    grep "PENDING_" $aux && let status=status+1
    if [ "$status" == "0" ]
    then
        exit 0
    fi
    sleep 5
done
exit 1
